<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/forgetbg1"
    tools:context="e.sanjaaykishore.mech.Main5Activity">


    <TextView
        android:id="@+id/closebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="X"
        android:layout_gravity="right"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="37px"
        android:layout_gravity="center"
        android:text="Foreget Your Password?"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/joinoutline"
        android:ems="10"
        android:layout_marginTop="98dp"
        android:hint="Enter the Email Address"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/reser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="198dp"
        android:background="@drawable/oobg"
        android:text="Reset Password"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="386dp" />
</LinearLayout>
